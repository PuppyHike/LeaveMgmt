@model IEnumerable<LeaveMgmt.Models.LeaveTypeVM>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-success">
        <i class="fa fa-plus" aria-hidden="true"></i>
         Create New
    </a>
</p>
<table id="tblData" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DefaultDays)
            </th>
            
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DefaultDays)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning" >
                    <i class="fa fa-pencil" aria-hidden="true"  ></i>
                    
                </a>  
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info">
                    <i class="fa fa-info" aria-hidden="true"></i>
                  
                </a>  
                <a asp-action="Delete" onclick="confirm('Are you sure you want to delete @item.Name ? ');"
                   class="btn btn-outline-danger" asp-route-id="@item.Id">
                    <i class="fa fa-trash" aria-hidden="true"></i>
              
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
